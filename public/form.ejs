<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="main">
      <h1>ADD PRODUCTS</h1>
      <div class="form">
        <form action="/addName" method="post">
          <input
            id="PrName"
            type="text"
            required
            name="name"
            placeholder="Name"
          />
          <input id="PrPrice" type="number" name="price" placeholder="Price" />
          <input id="PrImage" type="text" name="image" placeholder="Image URL" />
          <input
            id="PrDes"
            type="text"
            name="description"
            placeholder="Description"
          />
          <input id="PrUUID" type="number" name="uuid" placeholder="UUID" />
          <input id="id" type="hidden" name="id" />
          <input class="submitButton" type="submit" />
        </form>
      </div>

      <br />
      <br />
      <h1>CATALOG</h1>
      <table>
        <tr class="names">
          <td>Name</td>
          <td>Price</td>
          <td>Description</td>
          <td>Update</td>
          <td>Delete</td>
        </tr>
        <% obj.forEach(function(justOne) { %>
        <tr>
          <td><%= justOne.name %></td>
          <td><%= justOne.price %></td>
          <td><%= justOne.description %></td>
          <td><a class="update" href="update/<%= justOne._id %>">Update</a></td>
          <td><a class="delete" href="delete/<%= justOne._id %>">Delete</a></td>
        </tr>
        <% }); %>
      </table>

      <script src="script.js"></script>
    </div>
  </body>
</html>
